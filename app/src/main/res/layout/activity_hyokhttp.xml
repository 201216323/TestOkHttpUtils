<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="bruce.chang.testokhttputils.HYOkhttpActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ProgressBar

            android:id="@+id/mProgressBar"
            style="?android:progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" />

        <Button
            android:id="@+id/btn_get"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="get请求with__okhttputils"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="post请求with__okhttputils"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_download_big_file"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用okhttputils下载大文件"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_upload_files"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用okhttputils上传文件"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/btn_imge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用okhttputils请求单张图片"
            android:textAllCaps="false" />
        <Button
            android:id="@+id/btn_imge_list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:text="使用okhttputils在列表中请求图片"
            android:textAllCaps="false" />


        <TextView
            android:id="@+id/tv_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="显示请求数据"
            android:textAllCaps="false" />



        <ImageView
            android:id="@+id/iv_http"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            />
    </LinearLayout>

</ScrollView>
